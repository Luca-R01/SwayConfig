#!/bin/bash

MIC=$(pactl get-source-mute @DEFAULT_SOURCE@ | awk '{print $2}')
if [[ $MIC = yes ]] ; then
        COLOR="ff0000"
        ICON=""
else
        ICON=""
fi

# Output
echo "$ICON" && echo "" && echo "$COLOR"

# Mouse click event
if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
  pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+12 i3blocks
fi

