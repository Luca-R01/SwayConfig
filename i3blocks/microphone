#!/bin/bash

MIC=$(pactl get-source-mute @DEFAULT_SOURCE@ | awk '{print $2}')
if [[ $MIC = yes ]] ; then
        COLOR="ff0000"
        ICON=""
else
        ICON=""
fi

# Output
echo "$ICON" && echo "" && echo "$COLOR"

# Mouse click event
case $BLOCK_BUTTON in
    1) pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+12 i3blocks;;
esac

