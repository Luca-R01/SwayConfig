#!/bin/bash

status=$(bluetoothctl show | grep "Powered:" | awk '{print $2}')

if [ "$status" = "no" ]; then
	COLOR="#ff0000"
	STATUS="off"
else
	STATUS="on"
fi

# Output
echo "ïŠ” $STATUS" && echo "" && echo "$COLOR"

# Mouse click event
case $BLOCK_BUTTON in
    	1) bluetoothctl power off && notify-send "Bluetooth disattivato";;
	2) blueman-manager;;
    	3) bluetoothctl power on && notify-send "Bluetooth attivato";;
esac

