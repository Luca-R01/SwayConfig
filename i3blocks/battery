#!/bin/bash

BAT=$(echo "BAT0")
BAT_PERC=$(cat /sys/class/power_supply/$BAT/capacity)
BAT_STATUS=$(cat /sys/class/power_supply/$BAT/status)

if [[ -z "$BAT_PERC" ]] ; then
	echo ""
else
	if [[ $BAT_STATUS = Charging ]] ; then
        	echo "âš¡ðŸ”‹$BAT_PERC%"
	else
		if [[ $BAT_PERC > 30 ]] ; then
        		echo "ðŸ”‹$BAT_PERC%"
		else
			echo "ðŸª«$BAT_PERC%"
		fi
	fi
fi



