#!/bin/bash

ip=$(hostname -i | awk '{print $1}')
wifi=$(ip a | grep "state UP" | grep "wlan")
eth=$(ip a | grep "state UP" | grep "eth")

if [[ $ip = 127.0.0.2 ]] ; then
        echo "⚠️ Disconnected"
else
        if [[ ! -z "$eth" ]] ; then
		echo " $ip"
	else
		if [[ ! -z "$wifi" ]] ; then
			echo " $ip"
                else
                        echo " $ip"
                fi
	fi
fi

